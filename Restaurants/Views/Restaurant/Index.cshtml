@model Restautants.ViewModels.Restautants.RestaurantsListVM

<!-- Page Content -->
<div class="container">
    <!-- Page Header -->
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">
                Restaurants
                <small></small>
            </h1>
            @Html.Partial("_PartialFilter", Model.Filter)
            <hr />
        </div>
    </div>
    <!-- /.row -->
    <!-- Projects Row -->
    <div class="row">
        @foreach (var item in Model.Items)
        {
            <div class="col-md-3 col-sm-6 hero-feature">
                <div class="thumbnail">
                    <img src="@item.ImageUrl" alt="">
                    <div class="caption">
                        <h3>@item.Name</h3>
                        <p>@item.Description</p>
                        <p>
                            <a href="/Restaurant/Details/@item.Id" class="btn btn-primary">View Restaurant</a>
                        </p>
                    </div>
                </div>
            </div>
        }
    </div>

    <hr />

    <div>
        @Html.Partial("_PagingPartial", Model.Pager)
    </div>
