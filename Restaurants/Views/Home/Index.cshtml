@model Restautants.ViewModels.Restautants.RestaurantsListVM

<!--Carousel-->
<div class="container">
    <!-- Indicators -->
    <div id="myCarousel" class="carousel slide" data-ride="carousel">
        <!-- Wrapper for slides -->
        <div class="carousel-inner" role="listbox">
            <div class="item active">
                <iframe width="100%" height="350" src="//www.youtube.com/embed/dqjbkzistdI?modestbranding=1&autohide=1&showinfo=0&controls=0&autoplay=1" frameborder="0" allowfullscreen=""></iframe>
                <div class="carousel-caption">
                <h3>Plovdiv</h3>
                <p>Plovdiv Together 2019 European Capital Of Culture</p>
            </div>
            </div>
            @foreach (var item in Model.Carousel)
            {
                <div class="item">
                    <img class="first-slide" src="@item.ImageUrl" style="height:350px; width:1200px;" alt="First slide">
                    <div class="carousel-caption">
                        <h3>@item.Title</h3>
                        <p>@item.Description</p>
                    </div>
                </div>
            }
        </div>
        <!-- Left and right controls -->
        <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
            <span class="fa fa-angle-left" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
            <span class="fa fa-angle-right" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            @foreach (var item in Model.Carousel)
            {
                <li data-target="#myCarousel" data-slide-to="@item.Id" class=""></li>
            }
        </ol>
    </div>
</div>

<br />
<br />
<hr />
<!-- Title -->
<div class="row">
    <div class="col-lg-12">
        <h3>Latest Restaurants</h3>
    </div>
</div>
<!-- /.row -->
<!-- Page Features -->
<div class="row text-center">
    @foreach (var item in Model.Items)
    {
        <div class="col-md-3 col-sm-6 hero-feature">
            <div class="thumbnail">
                <img src="@item.ImageUrl" alt="">
                <div class="caption">
                    <h3>@item.Name</h3>
                    <p>@item.Description</p>
                    <p>
                        <a href="/Restaurant/Details/@item.Id" class="btn btn-primary">View Restaurant</a>
                    </p>
                </div>
            </div>
        </div>
    }
</div>